{
    "name": "remix-starter",
    "version": "1.1.0",
    "description": "ðŸ’¿ remix starter",
    "keywords": [
        "typescript",
        "react",
        "eslint",
        "prettier",
        "vitest",
        "vercel",
        "remix",
        "remix-stack",
        "tailwind"
    ],
    "homepage": "https://github.com/bradgarropy/remix-starter",
    "bugs": {
        "url": "https://github.com/bradgarropy/remix-starter/issues"
    },
    "license": "MIT",
    "author": {
        "name": "Brad Garropy",
        "email": "bradgarropy@gmail.com",
        "url": "https://bradgarropy.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bradgarropy/remix-starter"
    },
    "scripts": {
        "start": "run-p --print-label start:*",
        "start:tailwind": "npm run tailwind -- --watch",
        "start:remix": "remix dev",
        "build": "run-s --print-label build:*",
        "build:tailwind": "npm run tailwind -- --minify",
        "build:remix": "remix build",
        "tailwind": "tailwindcss --input app/styles/app.css --output app/styles/tailwind.css",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "test": "vitest --coverage",
        "test:watch": "vitest --coverage --watch",
        "contributors": "all-contributors generate"
    },
    "dependencies": {
        "@remix-run/node": "^1.7.0",
        "@remix-run/react": "^1.7.0",
        "@remix-run/vercel": "^1.7.0",
        "@vercel/node": "^2.4.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@bradgarropy/eslint-config": "^1.2.3",
        "@bradgarropy/eslint-config-react": "^1.0.2",
        "@bradgarropy/eslint-config-typescript": "^1.0.3",
        "@remix-run/dev": "^1.7.0",
        "@remix-run/eslint-config": "^1.7.0",
        "@remix-run/serve": "^1.7.0",
        "@testing-library/react": "^13.3.0",
        "@types/react": "^18.0.15",
        "@types/react-dom": "^18.0.6",
        "@vitejs/plugin-react": "^2.0.1",
        "@vitest/coverage-istanbul": "^0.22.1",
        "all-contributors-cli": "^6.20.0",
        "autoprefixer": "^10.4.8",
        "eslint": "^8.20.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "happy-dom": "^6.0.4",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.16",
        "prettier": "^2.7.1",
        "tailwindcss": "^3.1.8",
        "typescript": "^4.7.4",
        "vite-tsconfig-paths": "^3.5.0",
        "vitest": "^0.22.1"
    },
    "engines": {
        "node": ">=14"
    },
    "sideEffects": false
}
